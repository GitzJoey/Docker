# Use the official PHP 8.2 image with Apache
FROM php:8.2-apache

# Install Git, Composer, and MariaDB client
RUN apt-get update && apt-get install -y \
    git \
    curl \
    unzip \
    mariadb-client \
    cron \
    && rm -rf /var/lib/apt/lists/*

# Install Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Enable Apache mod_rewrite for pretty URLs
RUN a2enmod rewrite

# Configure Apache to serve a directory (adjust for your app)
COPY ./my-app /var/www/html/

# Set the document root
WORKDIR /var/www/html

# Add cron job that runs daily to pull from GitHub and deploy
COPY ./deploy-cron /etc/cron.d/deploy-cron
RUN chmod 0644 /etc/cron.d/deploy-cron

# Set up permissions for Apache
RUN chown -R www-data:www-data /var/www/html

# Expose the Apache server port
EXPOSE 80

# Start cron and apache2 services
CMD service cron start && apache2-foreground
